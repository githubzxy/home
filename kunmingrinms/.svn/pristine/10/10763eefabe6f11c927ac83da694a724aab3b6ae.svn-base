	$('#content').height(winHeight - 76);
	$('#mainContainer').width(winWidth - 152);
}

/**
 * 全屏content页面布局
 */
function fullscreenFitWHBoth() {
	var winHeight = $(window).height();
	var winWidth = $(window).width();
